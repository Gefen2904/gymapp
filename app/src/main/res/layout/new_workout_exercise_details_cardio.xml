<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/new_exercise_cardio_layout"
    android:background="@drawable/background_for_app">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="40dp"
        android:elevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:text="Cardio exercise"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/name_tv"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="260dp"
        android:layout_centerHorizontal="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="120dp"
        android:id="@+id/new_exercise_name_cardio_layout"
        android:hint="enter the name of the exercise"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:layout_below="@id/name_tv"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_exercise_name_cardio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:inputType="text"
            android:textAlignment="center"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:id="@+id/new_exercise_num_of_sets_cardio_layout"
        android:hint="enter number of sets"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@+id/new_exercise_name_cardio_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_exercise_num_of_sets_cardio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textAlignment="center"
            android:inputType="number"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:id="@+id/new_exercise_num_of_time_layout"
        android:hint="enter time for each set"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginBottom="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:gravity="center"
        android:layout_below="@+id/new_exercise_num_of_sets_cardio_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_exercise_num_of_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textAlignment="center"
            android:inputType="number"

            />
    </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_exercise_save_btn_cardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/save_symbol"
        android:layout_gravity="bottom"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>