<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/new_exercise_list_layout"
    android:background="@drawable/background_for_app">

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="110dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="40dp"
        android:elevation="20dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:hint="Enter workout title"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/new_exercise_name_strength_layout"
        android:textColorHint="@color/black"
        android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textAlignment="center"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:id="@+id/new_workout_list" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/what_days_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom"
        android:src="@drawable/pick_days_symbol"
        android:layout_above="@id/add_btn"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/add_symbol"
        android:layout_gravity="bottom"
        android:layout_above="@id/finish_btn"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/save_symbol"
        android:layout_alignParentBottom="true"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>




